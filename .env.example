# ============================================
# CONFIGURACIÓN DE DOCKER COMPOSE
# ============================================

# Dominio principal (cambiar a tu dominio)
DOMAIN=example.com

# Zona horaria
TZ=Europe/Madrid

# ============================================
# AUTHELIA
# ============================================

# JWT Secret (generar con: openssl rand -hex 32)
# IMPORTANTE: Cambiar estos valores en producción
JWT_SECRET=your-jwt-secret-change-this-to-random-hex-32-chars

# Session Secret (generar con: openssl rand -hex 32)
SESSION_SECRET=your-session-secret-change-this-to-random-hex-32

# Storage Encryption Key (generar con: openssl rand -hex 32)
STORAGE_ENCRYPTION_KEY=your-storage-encryption-key-change-this-random-32

# ============================================
# LETSENCRYPT / ACME
# ============================================

# Email para certificados Let's Encrypt
ACME_EMAIL=admin@example.com

# ============================================
# GUACAMOLE & POSTGRESQL
# ============================================

# Nombre base de datos
GUACAMOLE_DB_NAME=guacamole

# Usuario PostgreSQL
GUACAMOLE_DB_USER=guacamole

# Contraseña PostgreSQL (cambiar a algo seguro)
GUACAMOLE_DB_PASSWORD=your-very-long-postgres-password-change-this-123!@#
